<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/popup_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="#ededed"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/popup_background"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@drawable/background1"
            android:orientation="vertical"
            android:weightSum="4" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/popup_exit_btn"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:src="@drawable/close" />
            </RelativeLayout>

            <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/shadow_item_container"
                style="@style/ms9_DefaultShadowStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms9_shadowElevation="4dp"
                app:ms9_shadowTranslationZ="2dp" >

                <com.andexert.library.RippleView
                    android:id="@+id/more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginStart="50dp"
                    rv_centered="true" >

                    <LinearLayout
                        android:id="@+id/popup_call_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="6" >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/phone" />

                        <com.kontak.RobotoTextView
                            android:id="@+id/popup_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="050-000-0000"
                            android:textColor="#AA000000" />

                        <com.kontak.RobotoEditText
                            android:id="@+id/popup_number_edt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:background="@android:color/transparent"
                            android:hint="050-000-0000"
                            android:paddingEnd="5dp"
                            android:paddingRight="5dp"
                            android:textColor="#AA000000"
                            android:visibility="gone" />
                    </LinearLayout>
                </com.andexert.library.RippleView>
            </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

            <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/ms9_DefaultShadowStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms9_shadowElevation="4dp"
                app:ms9_shadowTranslationZ="2dp" >

                <com.andexert.library.RippleView
                    android:id="@+id/more2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    rv_centered="true" >

                    <LinearLayout
                        android:id="@+id/popup_identifier_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="6" >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/contact" />

                        <com.kontak.RobotoEditText
                            android:id="@+id/popup_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:background="@android:color/transparent"
                            android:hint="Unknown"
                            android:paddingEnd="5dp"
                            android:paddingRight="5dp"
                            android:textColor="#AA000000" />
                    </LinearLayout>
                </com.andexert.library.RippleView>
            </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_weight="5"
            android:background="#ffffff"
            android:orientation="vertical"
            android:weightSum="2" >

            <!-- <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView -->
            <!-- xmlns:android="http://schemas.android.com/apk/res/android" -->
            <!-- xmlns:app="http://schemas.android.com/apk/res-auto" -->
            <!-- style="@style/ms9_DefaultShadowStyle" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- app:ms9_shadowElevation="4dp" -->
            <!-- app:ms9_shadowTranslationZ="2dp" > -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:weightSum="6" >

                <org.angmarch.views.NiceSpinner
                    xmlns:NiceSpinner="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/popup_dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <com.gc.materialdesign.views.Slider
                    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/popup_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="#1E88E5"
                    materialdesign:max="60"
                    materialdesign:min="0"
                    materialdesign:showNumberIndicator="true" />

                <com.kontak.RobotoTextView
                    android:id="@+id/popup_slider_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#B3000000"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/material_underline"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView> -->

            <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/ms9_DefaultShadowStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:ms9_shadowElevation="4dp"
                app:ms9_shadowTranslationZ="2dp" >

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/popup_add_temp_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="#1E88E5"
                    android:text="Add contact" />
            </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <com.kontak.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popup_main_layout"
        android:layout_alignTop="@+id/popup_main_layout"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="Kontak"
        android:textColor="#B3000000"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>